@model TrialDev.Models.JobVacancyDTO

@{
    ViewData["Title"] = "Create";
}
<div class="row mt-xl-5">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                asdasd
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="JobTitle" class="control-label"></label><span style="color: red;">*</span>
                                <input asp-for="JobTitle" class="form-control" />
                                <span asp-validation-for="JobTitle" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="VacancyName" class="control-label"></label>
                                <input asp-for="VacancyName" class="form-control" />
                                <span asp-validation-for="VacancyName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Period" class="control-label"></label><span style="color: red;">*</span>
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="far fa-calendar-alt"></i>
                                        </span>
                                    </div>
                                    <input type="text" asp-for="Period" class="form-control float-right" />
                                </div>
                                @*<input asp-for="Period" type="date" class="form-control" />*@
                                <span asp-validation-for="Period" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Slots" class="control-label"></label>
                                <input asp-for="Slots" class="form-control" />
                                <span asp-validation-for="Slots" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Note" class="control-label"></label>
                                <textarea asp-for="Note" rows="5" cols="40" class="form-control"></textarea>
                                <span asp-validation-for="Note" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(function () {
            $('#Period').daterangepicker({
                locale: {
                    format: 'MM/DD/YYYY'
                },
                opens: 'left'
            }, function (start, end, label) {
                console.log("A new date selection was made: " + start.format('YYYY-MM-DD') + ' to ' + end.format('YYYY-MM-DD'));
            });
        })
    </script>
}
